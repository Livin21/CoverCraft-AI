{
  "manifest_version": 3,
  "name": "CoverCraft AI",
  "version": "1.0",
  "description": "Generate custom cover letters from job descriptions using OpenAI",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.monster.com/*",
        "https://*.careerbuilder.com/*",
        "https://*.simplyhired.com/*",
        "https://*.jobvite.com/*",
        "https://*.workable.com/*",
        "https://*.hired.com/*",
        "https://*.angel.co/*",
        "https://*.remote.co/*",
        "https://*.flexjobs.com/*",
        "https://*.weworkremotely.com/*",
        "https://*.remotive.com/*",
        "https://*.jobspresso.co/*",
        "https://*.remoteok.io/*",
        "https://*.jobbatical.com/*",
        "https://*.jobsearch.com/*",
        "https://*.jobsintech.io/*",
        "https://*.jobboard.io/*",
        "https://*.jobscan.co/*",
        "https://*.jobhero.com/*",
        "https://*.jobcase.com/*",
        "https://*.joblift.com/*",
        "https://*.jobrapido.com/*",
        "https://*.jobstreet.com/*",
        "https://*.seek.com.au/*",
        "https://*.jobs.com/*",
        "https://*.hackernews.com/*",
        "https://*.startup.jobs/*",
        "https://*.ycombinator.com/*",
        "https://*.naukri.com/*",
        "https://*.timesjobs.com/*",
        "https://*.shine.com/*",
        "https://*.monsterindia.com/*",
        "https://*.freshersworld.com/*",
        "https://*.internshala.com/*",
        "https://*.angel.co/*",
        "https://*.remote.co/*",
        "https://*.flexjobs.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
